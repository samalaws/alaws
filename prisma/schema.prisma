generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @unique
  email         String
  firstName     String
  lastName      String

  createdAt     DateTime  @default(now())
}

model Dev{
  id            String    @id @default(uuid())
  title         String
  description   String
  gitHubLink    String
  onlineLink    String
  status        DevStatus 
  images        String[]
  languages     String
  createdAt     DateTime  @default(now())
}
model Art{
  id            String    @id @default(uuid())
  title         String
  description   String
  status        DevStatus 
  images        String[]
  languages     String
  khat          Khat
  createdAt     DateTime  @default(now())

}

enum DevStatus {
  draft
  published
  archived
}

enum Languages {
  Arabic
  English
  German
}

enum Khat {
  Ruqaa
  Naskh
  Diwani
  DiwaniJali
  Kufi
  Taliek
  Thuluth
}